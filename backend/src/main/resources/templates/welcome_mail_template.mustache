<div style="display: table; width: 100%; min-height: 60vh; background: linear-gradient(135deg, {{primary_100}} 0%, {{primary_200}} 100%); font-family: Fredoka, Trebuchet MS, Helvetica, Arial, sans-serif;">
    <div style="display: table-row; height: 100%; width: 100%">
        <div style="display: table-cell; vertical-align: middle; text-align: center;">
            <div style="margin-left: 2rem; margin-right: 2rem;">
                <div style="margin: 2rem auto; padding: 2rem; border-radius: 1rem; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); text-align: center; background: {{primary_200_40}}; min-height: 200px; border-color: {{primary_100_40}}; border-style: solid; backdrop-filter: blur(10px); border: 1px solid {{glass_border}}; box-shadow: 0 8px 10px rgba(0, 0, 0, 0.1); border-radius: 1.5rem;">
                    <div style="width: 100%; height: 100%; display: table; border-collapse: collapse;">
                        <div style="display: table-row;">
                            <div style="display: table-cell; text-align: center; vertical-align: middle;">
                                <img src="https://i.imgur.com/lSHl47F.png" alt="Rarecips Logo" style="height: 40%; width: 40%; margin-bottom: 2rem; margin-top: 2rem; display: block; margin-left: auto; margin-right: auto;"> <!--TODO: dynamic logo src="\apo{baseUrl}\apo/assets/img/Rarecips_Iconologo.png"-->
                                <h1 style="color: {{primary_text}};">{{welcome_mail_title}}</h1>
                                <div style="color: {{primary_text}}">{{welcome_mail_intro}}</div>
                                <div style="margin: 0 auto; display: table; border-spacing: 16px; max-width: 100vw; overflow-x: auto; margin-top: 2rem">
                                    <div style="display: table-row;">
                                        {{#recipes}}
                                            <a href="{{baseUrl}}/recipes/{{id}}" style="text-decoration: underline; color: {{primary_text}}; display: table-cell;">
                                                <div style="background: {{primary_100}}; border-radius: 12px; box-shadow: 0 2px 8px #0001; width: 160px; max-width: 100vw; min-width: 70px; max-height: 200px; height: 196px; padding: 16px 12px 16px 12px; margin: 12px 8px; text-align: center; vertical-align: top; display: inline-block; box-sizing: border-box;">
                                                    <img src="{{imageString}}" style="min-width: 40px; min-height: 40px; width: 100%; height: 100px; border-radius: 12px; object-fit: cover; border-radius: 8px; margin-bottom: 12px;" alt="Recipe image">
                                                    <div style="color: {{primary_text}}; margin-top: 8px; text-overflow: ellipsis; max-height: 40px; overflow: hidden;">{{label}}</div>
                                                </div>
                                            </a>
                                        {{/recipes}}
                                    </div>
                                </div>
                                <p style="color: {{primary_text}}; margin-top: 2rem;">{{welcome_mail_thank_you}}</p>

                                <p style="margin-top: 32px; color: {{primary_50}}; font-size: 0.95em;">{{welcome_mail_contact}} <a href="mailto:{{fromAddress}}" style="font-size: 0.95em; color: {{primary_600}}; text-decoration: underline; vertical-align: middle; padding: 1.5rem 0;">{{fromAddress}}</a></p>
                                <div style="display: none; height: 20px;">
                                    <div style="display: table-cell; font-size: small; color: {{primary_text}}; font-weight: normal; vertical-align: middle; margin-top: 3rem; margin-bottom: 0.5rem; text-align: right; padding-top: 2rem;">{{timestamp}}</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


